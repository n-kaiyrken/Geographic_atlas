<resources>
    <!-- Base application theme. -->
    <style name="Theme.GeographicAtlas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailTextViewLabelStyle" >
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DetailTextViewValueStyle" >
        <item name="android:textSize">23sp</item>
    </style>

    <style name="TextViewCountryStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>